{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "strict": true,
      "alwaysStrict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es6",
      "moduleResolution": "node",
      "target": "es5",
      "allowJs": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "rootDir": ".",
      "noFallthroughCasesInSwitch": true,
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom",
      ]
  },
  "include": [
      "./src/**/*",
  ]
}